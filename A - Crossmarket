#include <bits/stdc++.h>
 
using namespace std;
 
int main()
{
    int t;
    cin>>t;
    while(t--)
    {   int ans=0;
       long long int n,m;
        cin>>n>>m;
        if(n==m&&n==1&&m==1)
        ans=0;
        else
     ans =2*min(n,m)-2+max(n,m);
        cout<<ans<<endl;
    }
    return 0;
}
